# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[*.ps1]
charset = utf-8-bom

[{angular,package,package-lock,tsconfig,tslint}.json]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[*.{bat,cmd}]
charset = unset
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[src/**]
charset = utf-8-bom
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[src/*.{js,ts,scss}]
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = off
